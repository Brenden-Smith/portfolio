---
import { Image } from "astro:assets";
import Tooltip from "./Tooltip.astro";
const { title, image, base } = Astro.props;
---

<Tooltip
    title={title}
    href={base ? `/${base}/${title.toLowerCase().replace(/\s+/g, "-")}` : "/"}
    className="block min-h-24 min-w-24 link-animation"
    internal={true}
>
    <Image
        src={image}
        alt={title}
        class="rounded-3xl h-24 w-24 object-contain bg-black"
        draggable="false"
    />
</Tooltip>
